<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.scarwizard" name="[COLOR orange][B]Scar[/B][/COLOR]Wizard" version="1.2" provider-name="Macaulay">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" library="startup.py" start="startup" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en">[COLOR orange][B]Scar[/B][/COLOR]Wizard</summary>
        <description lang="en">[COLOR orange][B]Scar[/B][/COLOR]Wizard offers the Builds used to make your Kodi function as one of the necessities of life.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source></source>
        <news>
        1.0.0
         - Initial Commit - Scar's Wizard and Build Commenced.
        </news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>

<addon id="repository.scar" name="Scar Repo" version="1.0" provider-name="Macaulay">
    <extension point="xbmc.addon.repository" name="Scar Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/AxPhantom/ScarRepo/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/AxPhantom/ScarRepo/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/AxPhantom/ScarRepo/master/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>ScarRepo</summary>
        <description>Home to Scar Wizard, The wizard that will change you view on the necessities of life</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
